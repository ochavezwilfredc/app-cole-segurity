<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="PROGRESO"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            ></TextView>
        <TableLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="CALIDAD:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    ></TextView>


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbCalidad"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcCalidad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="PRECIO:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    ></TextView>


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbPrecio"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="PUNTUALIDAD:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    ></TextView>


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbPuntualidad"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcPuntualidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="ANTIGUEDAD:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    ></TextView>


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbAntiguedad"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcAntiguedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp"></TextView>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="VALOR:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    ></TextView>


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbValor"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcValor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="CEDULA\nAUTORIZACIÓN:"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    android:minLines="2"
                    />

                <CheckBox
                    android:id="@+id/cbCedula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:enabled="false"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="TARJETA UNICA\nCIRCULACIÓN"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    android:layout_marginRight="10dp"
                    />


                <ProgressBar
                    android:layout_marginLeft="-10dp"
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbTarjeta"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcTarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="CREDENCIAL\nCONDUCTOR"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    />


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbCredencial"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcCredencial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="BREVETE\nCONDUCTOR"
                    android:textColor="@color/textBLack"
                    android:layout_gravity="left"
                    />


                <ProgressBar
                    android:layout_gravity="center"
                    android:scaleY="2"
                    android:id="@+id/pbBrevete"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:minWidth="110dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/porcBrevete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="5dp"
                    android:text="VALO:"
                    android:textColor="#03274B"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>